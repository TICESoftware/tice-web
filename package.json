{
  "name": "tice-web",
  "version": "2.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint:vue": "vue-cli-service lint --no-fix",
    "lint:tests": "eslint --no-fix test",
    "lint": "yarn run lint:vue && yarn run lint:tests",
    "test:local": "mocha test/local.test.js --timeout 60000",
    "test:remote": "mocha test/remote.test.js",
    "test:ci": "test/scripts/startServer.sh && yarn run test:local --reporter mocha-junit-reporter && test/scripts/stopServer.sh || test/scripts/stopServer.sh",
    "docker": "docker build -t tice-web -f web.Dockerfile .",
    "audit": "yarn audit --frozen-lockfile --level high --groups dependencies"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-brands-svg-icons": "^5.15.3",
    "@fortawesome/vue-fontawesome": "^2.0.2",
    "core-js": "^3.12.1",
    "date-fns": "^1.29.0",
    "double-ratchet.js": "git+ssh://git@github.com:TICESoftware/double-ratchet.js.git",
    "element-ui": "^2.15.1",
    "elliptic": "^6.5.4",
    "hkdf.js": "git+ssh://git@github.com:TICESoftware/hkdf.js.git",
    "jssha": "^3.2.0",
    "key-encoder": "^2.0.3",
    "libsodium-wrappers": "^0.7.9",
    "mapbox-gl": "^2.2.0",
    "vue": "^2.6.12",
    "vue-beautiful-chat": "^2.5.0",
    "vue-i18n": "^8.24.4",
    "vue-mapbox": "^0.4.1",
    "vue-timeago": "^5.1.3",
    "x3dh.js": "git+ssh://git@github.com:TICESoftware/x3dh.js.git"
  },
  "devDependencies": {
    "@types/libsodium-wrappers": "^0.7.9",
    "@vue/cli-plugin-babel": "^4.5.13",
    "@vue/cli-plugin-eslint": "^4.5.13",
    "@vue/cli-service": "^4.5.13",
    "@vue/eslint-config-airbnb": "^5.3.0",
    "axios": "^0.21.1",
    "babel-eslint": "^10.1.0",
    "babel-plugin-component": "^1.1.1",
    "chai": "^4.3.4",
    "chromedriver": "^90.0.0",
    "eslint": "^7.26.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-vue": "^7.9.0",
    "geckodriver": "^2.0.0",
    "html-webpack-plugin": "4",
    "mocha": "^8.4.0",
    "mocha-junit-reporter": "^2.0.0",
    "node-sass": "^6.0.0",
    "sass-loader": "^11.1.1",
    "selenium-webdriver": "^4.0.0-beta.3",
    "vue-template-compiler": "^2.6.12"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "airbnb-base"
    ],
    "rules": {
      "indent": [
        "error",
        4
      ],
      "max-len": "off",
      "import/no-unresolved": "off",
      "no-param-reassign": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
